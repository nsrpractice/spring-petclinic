pipeline{
  agent { label 'JDK11' }
  triggers {
        cron('*/2 * * * *')
    }
stages {
        stage('source code') {
            steps {
	            'https://github.com/nsrpractice/spring-petclinic.git'
                   // git branch: 'main', url: 'https://github.com/KhajasCICDSamples/game-of-life.git'
            }
            }
        stage('Build the code') {
            steps {
                sh 'mvn clean package'
            }
        }
       stage('Post build actions') {
            steps {
                 archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
                 junit 'target/surefire-reports/*.xml'
            }
        }
    }

}
